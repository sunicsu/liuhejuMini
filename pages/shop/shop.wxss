/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh; /* 设置容器高度为视口高度 */
}

/* input容器样式，用于居中input */
.input-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 80%; /* 可根据需要调整宽度 */
}

/* input样式，设置大小和居中 */
.centered-input {
  width: calc(80% - 40px);
  height: 65rpx;
  margin: auto;
  padding: 5rpx; /* 设置内边距 */
  margin-bottom: 20rpx;
  font-size: 16px; /* 设置字体大小 */
  border: 1px solid #ccc;
  box-sizing: border-box; /* 设置盒模型为border-box */
}

/* 顶部view样式 */
.top-view {
  position: fixed; /* 固定在顶部 */
  top: 20rpx;
  left: 20rpx;
  right: 0;
}

button {
  width: 200rpx;
  font-size:35rpx;
  line-height:70rpx;
  text-align: center; 
  margin-top: 10px; 
  margin-bottom: 3px;
  border-radius: 5px;
  padding: 0 0;
}
